---
import { App } from '../components/app';
import { getLocale } from "astro-i18n-aut";
import '@fontsource-variable/fira-code';
import '../base.css';

const locale = getLocale(Astro.url);
---

<html lang={locale}>
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<script is:inline>
      const isDarkMode = (() => {
        if (
          typeof localStorage !== 'undefined' &&
          localStorage.getItem('is-dark-mode')
        ) {
          return localStorage.getItem('is-dark-mode') === 'true'
        }
        if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
          return true
        }
        return false
      })()

      if (isDarkMode) {
        document.documentElement.classList.add('dark')
        document.documentElement.dataset.theme = 'nord-dark'
      } else {
        document.documentElement.classList.remove('dark')
        document.documentElement.dataset.theme = 'nord-light'
      }
		</script>
	</head>
	<body>
    <App client:load locale={locale} />
	</body>
</html>
